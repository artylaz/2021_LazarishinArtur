@{
    Layout = null;
}
@model _2021_LazarishinArtur.Web.Models.ViewModels.RegisterViewModel
<!DOCTYPE html>
<html>
<head>
    @await Html.PartialAsync("MetatagsPartial")
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style-auth.css" rel="stylesheet">
</head>
<body class="text-center">

    
    <form class="form-signin" method="post" asp-controller="Account" asp-action="Register">

        <a class="img-back" href="/Home/Index">
            <img src="/img/back.png" width="30" height="30" loading="lazy">
        </a>
        <div class="container">

            <img class="mb-4 img-logo" src="/img/logo.png" width="72" height="72">

            <p class="h3 mb-3 font-weight-normal">Введите свои данные</p>
            <input type="text" name="Name" class="form-control" placeholder="Имя" autofocus="">

            <span asp-validation-for="Email" class="val"></span>
            <input type="email" name="Email" class="form-control" placeholder="Email">

            <span asp-validation-for="Password" class="val"></span>
            <input type="password"  name="Password" class="form-control" placeholder="Пароль">
            <span asp-validation-for="PasswordConfirm" class="val"></span>
            <input type="password" name="PasswordConfirm" class="form-control" placeholder="Подтвердить пароль">

            <input class="btn btn-outline-light mt-3" type="submit" value="Зарегистрироваться" />
        </div>


    </form>

    @await Html.PartialAsync("ScriptsPartial")
</body>
</html>
